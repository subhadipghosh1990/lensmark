<section class="adminForm py-5 my-5">

    <div class="container">

        <div class="row">

            <div class="col-md-6">

                <form class="signUpForm">

                    <div class="form-group">
                        <input class="form-control" id="name" type="text" placeholder="name" required>
                    </div>

                    <div class="form-group">
                        <input class="form-control" id="mail" type="email" placeholder="email" required>
                    </div>

                    <div class="form-group">
                        <input class="form-control" id="phone" type="text" placeholder="phone">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="password"  placeholder="password" id="pass" required>
                    </div>

                    <div class="form-group">
                        <button class="btn">Register</button>
                    </div>
                </form>

            </div>

            <div class="col-md-6"></div>

        </div>

    </div>

</section>